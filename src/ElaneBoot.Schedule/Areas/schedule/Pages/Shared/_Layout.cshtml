<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/schedule/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/schedule/css/bootstrap-datetimepicker.min.css" />
    <link rel="stylesheet" href="~/schedule/css/schedule.css" />

    <script src="~/schedule/js/jquery.min.js"></script>
    <script src="~/schedule/js/bootstrap.min.js"></script>
    <script src="~/schedule/js/moment.js"></script>
    <script src="~/schedule/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/schedule/js/bootstrap-paginator.min.js"></script>
    <script src="~/schedule/js/schedule.js"></script>
</head>
<body>


    <nav class="navbar navbar-default">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Schedule/Index">任务调度平台</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/Schedule/Index">任务</a></li>
                    <li><a href="/Schedule/Log">日志</a></li>
                    <li><a href="#">设置</a></li>
                    <li><a href="#">关于</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>



    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; <a target="_blank" href="https://github.com/deeround">Github</a> 2020</p>
        </footer>
    </div>

    <script>
        var _url = window.location.href;
        if (_url.toLowerCase().indexOf('index') != -1) {
            $('ul.nav>li').removeClass('active');
            $('ul.nav>li>a[href="/Schedule/Index"]').parent('li').addClass('active');
        }
        else if (_url.toLowerCase().indexOf('log') != -1) {
            $('ul.nav>li').removeClass('active');
            $('ul.nav>li>a[href="/Schedule/Log"]').parent('li').addClass('active');
        }
    </script>
</body>
</html>
